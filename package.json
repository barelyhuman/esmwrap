{
  "name": "esmwrap",
  "version": "0.0.4-0",
  "description": "straightforward esm wrapper generator",
  "bin": "esmwrap.js",
  "repository": "https://github.com/barelyhuman/esmwrap",
  "bugs": {
    "url": "https://github.com/barelyhuman/esmwrap/issues"
  },
  "files": [
    "esmwrap.js",
    "esm/esmwrap.js"
  ],
  "exports": {
    ".": {
      "import": "./esm/esmwrap.js",
      "require": "./esmwrap.js"
    }
  },
  "author": {
    "name": "Reaper",
    "email": "ahoy@barelyhuman.dev"
  },
  "scripts": {
    "clean": "rm -rf esm",
    "build": "node esmwrap.js './*.js' esm",
    "bundlesize": "GITHUB_TOKEN='' bundlesize",
    "prepare": "husky install; npm run bundlesize",
    "fix": "wrap --fix"
  },
  "lint-staged": {
    "*.js": [
      "npm run fix"
    ]
  },
  "bundlesize": [
    {
      "path": "./esmwrap.js",
      "maxSize": "2 kB",
      "compression": "brotli"
    },
    {
      "path": "./esmwrap.js",
      "maxSize": "3 kB",
      "compression": "none"
    },
    {
      "path": "./esmwrap.js",
      "maxSize": "2 kB",
      "compression": "gzip"
    },
    {
      "path": "./esm/esmwrap.js",
      "maxSize": "2 kB",
      "compression": "brotli"
    },
    {
      "path": "./esm/esmwrap.js",
      "maxSize": "2 kB",
      "compression": "none"
    },
    {
      "path": "./esm/esmwrap.js",
      "maxSize": "2 kB",
      "compression": "gzip"
    }
  ],
  "license": "MIT",
  "private": false,
  "dependencies": {
    "picomatch": "^2.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@barelyhuman/wrap": "^0.0.8-1",
    "bundlesize": "^0.18.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "standard": "^16.0.3"
  }
}
